<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_tv_poster"
            android:layout_width="68dp"
            android:layout_height="100dp"
            android:contentDescription="@string/tv_show_image"
            app:url="@{tvshow.posterPath}"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{tvshow.name}"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="TV name test" />

            <TextView
                android:id="@+id/search_tv_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{tvshow.genres}"
                android:textSize="12sp"
                tools:text="Horror, horror, horror" />

            <TextView
                android:id="@+id/search_tv_first_air_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{tvshow.firstAirDate}"
                android:textSize="12sp"
                tools:text="2020" />
        </LinearLayout>
    </LinearLayout>

    <data>

        <variable
            name="tvshow"
            type="com.geekbrains.team.filmlibrary.fragments.search.model.SearchedTVShowView" />
    </data>
</layout>